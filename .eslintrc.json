{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-spacing": ["error", { "before": false, "after": true }],
        "semi": ["error", "never"],
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": false }]
    }
}